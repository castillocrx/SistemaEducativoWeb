@model SistemaEducativoWeb.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Eliminar Usuario</h1>

    <h3 class="text-danger text-center">¿Estás seguro de que deseas eliminar esto?</h3>
    <div class="bg-light p-4 rounded shadow">
        <h4 class="text-muted">Información del Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NombreUsuario)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreUsuario)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Contraseña)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Contraseña)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Rol)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Rol.NombreRol)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaCreacion)</dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-link">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
