@model SistemaEducativoWeb.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<h1 class="text-center mt-4">Crear Usuario</h1>

<div class="container mt-5">
    <h4 class="text-muted">Información del Usuario</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="NombreUsuario" class="form-label"></label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de Usuario" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Contraseña" class="form-label"></label>
                    <input asp-for="Contraseña" class="form-control" type="password" placeholder="Contraseña" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RolId" class="form-label"></label>
                    <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId">
                        <option value="">Seleccione un Rol</option>
                    </select>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Crear Usuario" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link">Volver a la lista <i class="bi bi-arrow-left"></i></a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}