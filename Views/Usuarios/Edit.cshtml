@model SistemaEducativoWeb.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Editar Usuario</h1>

    <h4 class="text-muted">Información del Usuario</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" class="bg-light p-4 rounded shadow" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Contraseña" />

                <div class="form-group mb-3">
                    <label asp-for="NombreUsuario" class="form-label"></label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RolId" class="form-label"></label>
                    <select asp-for="RolId" class="form-select" asp-items="ViewBag.RolId">
                        <option value="">Seleccione un Rol</option>
                    </select>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning">Actualizar</button>
                    <a asp-action="Index" class="btn btn-link">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}