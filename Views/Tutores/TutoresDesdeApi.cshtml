@model List<Tutor>

<h1>Tutores desde la API</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Especialidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tutor in Model)
            {
                <tr>
                    <td>@tutor.Nombre</td>
                    <td>@tutor.Apellidos</td>
                    <td>@tutor.Correo</td>
                    <td>@tutor.Telefono</td>
                    <td>@tutor.Especialidad</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron tutores desde la API.</p>
}
