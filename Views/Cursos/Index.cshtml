@model IEnumerable<SistemaEducativoWeb.Models.Curso>
@{
    ViewData["Title"] = "Lista de Cursos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4"> <h1 class="text-center">Lista de Cursos</h1>
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nuevo
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.First().Duracion) (horas)</th>
                <th>@Html.DisplayNameFor(model => model.First().Tutor)</th>
                <th>@Html.DisplayNameFor(model => model.First().Programa)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duracion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tutor.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Programa.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿ Estás seguro de que deseas eliminar este curso?');">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {

}
