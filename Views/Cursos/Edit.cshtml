@model SistemaEducativoWeb.Models.Curso

@{
    ViewData["Title"] = "Editar Curso";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Editar Curso</h1>

    <h4 class="text-muted">Información del Curso</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del Curso" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción del Curso" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Duracion" class="form-label"></label>
                    <input asp-for="Duracion" class="form-control" type="number" placeholder="Duración en horas" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TutorId" class="form-label"></label>
                    <select asp-for="TutorId" class="form-select" asp-items="ViewBag.TutorId">
                        <option value="">Seleccione un Tutor</option>
                    </select>
                    <span asp-validation-for="TutorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProgramaId" class="form-label"></label>
                    <select asp-for="ProgramaId" class="form-select" asp-items="ViewBag.ProgramaId">
                        <option value="">Seleccione un Programa</option>
                    </select>
                    <span asp-validation-for="ProgramaId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}