@model SistemaEducativoWeb.Models.Matricula

@{
    ViewData["Title"] = "Eliminar Matrícula";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Eliminar Matrícula</h1>
    <h3 class="text-danger text-center">¿Estás seguro de que deseas eliminar esto?</h3>

    <div class="bg-light p-4 rounded shadow">
        <h4 class="text-muted">Información de la Matrícula</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estudiante)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estudiante.Apellidos)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Curso)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Curso.Nombre)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estado)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaInscripcion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaInscripcion)</ dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
        </form>
    </div>
</div>