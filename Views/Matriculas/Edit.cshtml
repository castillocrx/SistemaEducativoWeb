@model SistemaEducativoWeb.Models.Matricula

@{
    ViewData["Title"] = "Editar Matrícula";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Editar Matrícula</h1>
    <h4 class="text-muted">Información de la Matrícula</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="EstudianteId" class="form-label"></label>
                    <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.EstudianteId"></select>
                    <span asp-validation-for="EstudianteId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CursoId" class="form-label"></label>
                    <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId"></select>
                    <span asp-validation-for="CursoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <select asp-for="Estado" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="Confirmado">Confirmado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaInscripcion" class="form-label"></label>
                    <input asp-for="FechaInscripcion" class="form-control" type="date" />
                    <span asp-validation-for="FechaInscripcion" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}