@model SistemaEducativoWeb.Models.Evaluacion

@{
    ViewData["Title"] = "Detalles de Evaluación";
}

<div class="container mt-4">
    <h1 class="text-center">Detalles de Evaluación</h1>
    <div class="bg-light p-4 rounded shadow">
        <h4 class="text-muted">Información de la Evaluación</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Estudiante)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Estudiante.Apellidos)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Curso)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Curso.Nombre)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaEvaluacion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaEvaluacion)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Calificacion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Calificacion)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Comentarios)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Comentarios)</dd>
        </dl>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-link">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>