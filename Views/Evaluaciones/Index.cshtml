@model IEnumerable<SistemaEducativoWeb.Models.Evaluacion>

@{
    ViewData["Title"] = "Lista de Evaluaciones";
}

<div class="container mt-4">
    <h1 class="text-center">Lista de Evaluaciones</h1>
    <p class="text-center">
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nueva Evaluación</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Estudiante)</th>
                <th>@Html.DisplayNameFor(model => model.Curso)</th>
                <th>@Html.DisplayNameFor(model => model.FechaEvaluacion)</th>
                <th>@Html.DisplayNameFor(model => model.Calificacion)</th>
                <th>@Html.DisplayNameFor(model => model.Comentarios)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Estudiante.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Curso.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEvaluacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comentarios)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>