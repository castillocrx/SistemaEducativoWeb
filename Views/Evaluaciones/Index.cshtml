@model IEnumerable<SistemaEducativoWeb.Models.Evaluacion>

@{
    ViewData["Title"] = "Lista de Evaluaciones";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Lista de Evaluaciones</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear Nueva Evaluación</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Estudiante)</th>
                <th>@Html.DisplayNameFor(model => model.First().Curso)</th>
                <th>@Html.DisplayNameFor(model => model.First().FechaEvaluacion)</th>
                <th>@Html.DisplayNameFor(model => model.First().Calificacion)</th>
                <th>@Html.DisplayNameFor(model => model.First().Comentarios)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Estudiante.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.Curso.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaEvaluacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comentarios)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta evaluación?');"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>