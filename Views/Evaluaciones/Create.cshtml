@model SistemaEducativoWeb.Models.Evaluacion

@{
    ViewData["Title"] = "Crear Evaluación";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<h1 class="text-center mt-4">Crear Evaluación</h1>

<div class="container mt-5">
    <h4 class="text-muted">Información de la Evaluación</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="EstudianteId" class="form-label"></label>
                    <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.EstudianteId"></select>
                    <span asp-validation-for="EstudianteId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CursoId" class="form-label"></label>
                    <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId"></select>
                    <span asp-validation-for="CursoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Calificacion" class="form-label"></label>
                    <input asp-for="Calificacion" class="form-control" type="number" step="0.01" placeholder="Calificación" />
                    <span asp-validation-for="Calificacion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comentarios" class="form-label"></label>
                    <textarea asp-for="Comentarios" class="form-control" rows="3" placeholder="Comentarios"></textarea>
                    <span asp-validation-for="Comentarios" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Crear Evaluación" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link">Volver a la lista <i class="bi bi-arrow-left"></i></a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}