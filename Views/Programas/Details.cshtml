@model SistemaEducativoWeb.Models.Programa

@{
    ViewData["Title"] = "Detalles del Programa";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
<div class="container mt-4">
    <h1 class="text-center">Detalles del Programa</h1>

    <div class="bg-light p-4 rounded shadow">
        <h4 class="text-muted">Información del Programa</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-10">@Model.Nombre</dd> 

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd> 

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Duracion)</dt>
            <dd class="col-sm-10">@Model.Duracion</dd> 

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
            <dd class="col-sm-10">@Model.FechaInicio.ToShortDateString()</dd> 

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaFin)</dt>
            <dd class="col-sm-10">@Model.FechaFin.ToShortDateString()</dd> 

            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">@(@Model.Estado ? "Activo" : "Inactivo")</dd> 
        </dl>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-link">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>